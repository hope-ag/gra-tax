{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2022", "ES2021", "DOM"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "__tests__/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "src/http", "logs"],
  "ts-node": {
    "swc": true
  }
}
